*, *::before, *::after {
  box-sizing: border-box;
}

@require './fonts.styl'

html {
  height: 100%;
  font-size: 16px;
}

a{
  text-decoration: none;
}



body {
  margin: 0;
  font-family: 'Avenir Next Regular';
  height: 100%;
}

header,
nav,
section,
article,
aside,
footer {
  display: block;
}

.page{
  max-width 1440px
  margin 0 auto
}

.header{
  position: relative;
  &_mobile{
    display: none
  }
  &__photo{
    display flex
    flex-wrap wrap
    &-item{
      width: 25%;
      height: 22vw;
      position: relative;
      max-width: 360px;
      max-height: 320px;
      img{
        width 100%
        height 100%
        object-fit cover
      }
    }
    &-small{
      max-width 180px
      max-height 180px
      width: 12.5vw;
      height: 12.5vw;
      position: absolute
      background-color rgba(#ef3829,0.9)
      bottom: 0;
      left: 0;
      &_black{
        background-color: rgba(#000,0.6)
      }
      &_right{
        left:inherit
        right:0;
      }
    }
  }
  &__inner{
    position: absolute;
    z-index: 1;
    width: 100%;
  }
  &__top{
    position: absolute;
    left: 25vw;
    bottom: -22vw;
    display: flex
    width calc(100% - 25vw)
    justify-content: space-between
    padding-right 2.5vw
  }
  &__tel{
    a{
      font-size: 3.6vw;
      color: #fff;
      font-family: 'Avenir Next Demi';
    }
    &-text{
      font-size: 1.75vw;
      color: #fff;
      font-family: 'Avenir Next Demi';
      letter-spacing: 0.2px;
      text-transform: uppercase;
    }
  }
  &__bottom{
    position: absolute;
    top: 22vw;
    display: flex
    left: 12.5vw;
    height 14vw
  }
  &__text{
    &-top{
      max-height: 100px;
      height: 7vw;
      display: flex;
      line-height:7vw
    }
    &-bottom{
      max-height: 100px;
      height: 7vw;
      display: flex
      line-height:7vw
    }
  }
  &__title{
    font-family: 'Proxima Nova Extrabold';
    color: #fff
    font-size 5vw
    letter-spacing 1.3px
    text-transform uppercase
    padding: 0 1.65vw;
    background: rgba(0,0,0,0.7);
  }
  &__description{
    padding: 0 1.65vw;
    background: rgba(0,0,0,0.7);
    font-size: 2.25vw;
    color: #fff;
    font-family: 'Proxima Nova Semibold';
    b{
      color #ef3829
      font-family: 'Proxima Nova Extrabold Italic';
      font-style: italic;
    }
  }
  &__logo{
    max-height: 200px;
    padding: 40px;

    background-color: #ef3829;
    height: 14vw;
    display: flex;
    align-items: center;
    a{
      background url("../img/logo-white.svg") no-repeat
      background-size cover
      width 250px
      display: block
      height 67px
    }
  }
}

.menu{
  list-style-type none
  display: flex
  justify-content space-between
  width:100%;
  padding 0 2vw
  max-width: 1100px
  margin 0 auto
  &-top{
    height 70px
    background-color #000000
    display: flex;
    align-items: center;
  }
  &__item{
    a{
      color: rgba(255,255,255,0.8)
      transition 0.3s
      font-size 16px
      font-family: 'Avenir Next Demi';
      text-transform uppercase
      letter-spacing 0.4px
      &:hover{
        transition 0.3s
        color: #fff
      }
    }
  }
}

@media (min-width: 1440px){
  .header{
    &__title{
      font-size 70px
      padding: 0 24px
    }
    &__description{
      padding: 0 24px;
      font-size: 32px;
    }
    &__bottom{
      top: 320px;
      left: 180px;
      height 200px
    }
    &__text{
      &-top{
        line-height 100px
      }
      &-bottom{
        line-height:100px
      }
    }
    &__top{
      padding-right 35px
      left: 360px;
      bottom: -320px;
      width: calc(100% - 360px);
    }
    &__tel{
      a{
        font-size: 52px;
      }
      &-text{
        font-size: 25px;
      }
    }
    &__photo{
      &-item{
        height:320px
      }
    }
  }
}

  @media(max-width: 1024px){
    .header{
      &_desktop{
        display: none
      }
      &_mobile{
        display: block;
      }
      &__photo{
        &-item{
          width 33.3%
          height 30vw
        }
        &-small{
          width: 16.5vw;
          height: 16.5vw;
        }
      }
    }
  }