*, *::before, *::after {
  box-sizing: border-box;
}

@require './fonts.styl'

html {
  height: 100%;
  font-size: 16px;
}

a{
  text-decoration: none;
}



body {
  margin: 0;
  font-family: 'Avenir Next Regular';
  height: 100%;
}

header,
nav,
section,
article,
aside,
footer {
  display: block;
}

.page{
  max-width 1440px
  margin 0 auto
}

  .header{
    &__photo{
      display flex
      flex-wrap wrap
      &-item{
        width: 25%;
        height: 22vw;
        position: relative;
        max-width: 360px;
        max-height: 320px;
        img{
          width 100%
          height 100%
          object-fit cover
        }
      }
      &-small{
        max-width 180px
        max-height 180px
        width: 12.5vw;
        height: 12.5vw;
        position: absolute
        background-color rgba(#ef3829,0.9)
        bottom: 0;
        left: 0;
        &_black{
          background-color: rgba(#000,0.6)
        }
        &_right{
          left:inherit
          right:0;
        }
      }
    }
  }

